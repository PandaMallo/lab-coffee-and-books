<div class="container">
    <h2>Put in "Your Place"</h2>
    <hr>

    <div class="row justify-content-center">

        <div class="col-md-6">

            <form action="/places/new-places" method="POST">
                <div class="form-group">
                    <label for="name">Name of Your Place</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="form-group">
                    <label for="type">Select the Type of Your Place</label>
                    <select class="form-control" id="type" name="type">
                    <option value="coffee shop">Coffee Shop</option>
                    <option value="book shop">Book Shop</option>
                    </select>
                </div>
                <div class="row">
                    <div class="col">
                        <label for="location">Location Lat</label>
                        <input type="text" class="form-control" name='lat' placeholder="Latitude">
                    </div>
                    <div class="col">
                        <label for="location">Location Lng</label>
                        <input type="text" class="form-control" name='lng' placeholder="Longitude">
                    </div>
                </div>
                <br>
                <button type="submit" class="btn btn-dark btn-block">Create Shop</button>
            </form>
        </div>
    </div>


    <hr>
    <a href="/" class="btn btn-dark">Home</a>
</div>